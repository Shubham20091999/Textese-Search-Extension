{
  "manifest_version": 2,
  "name": "Textese Search",
  "description": "To use, type '.' + Your Shortcut in URL bar",
  "version": "1.3",
  "icons": {
    "16": "icons/Icon16.png",
    "48": "icons/Icon48.png",
    "96": "icons/Icon96.png",
    "128": "icons/Icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "omnibox": {
    "keyword": "."
  },
  "browser_action": {
    "default_icon": "icons/Icon32.png",
    "default_title": "Shortcuts"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "commands": {
    "Open-Shortcuts-Page": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "linux": "Ctrl+Shift+V"
      },
      "description": "Open Shortcuts Page"
    }
  }
}